<% if post.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

    <ul>
    <% post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div class="row">
  <div class="col-md-12">
    <%= form_for(post) do |f| %>
      <div class="form-group">
        <div>
          <%= f.text_field :title, class:"form-control", id:"focusedInput", placeholder:"Title" %>
        </div>
      </div>

      <div class="form-group">
        <div>
          <%= f.text_area :body, class:"form-control", id:"focusedInput", placeholder:"Post" %>
        </div>
      </div>
      <div align="center">
        <%= f.submit class:"btn btn-success btn-xs", align:"center" %>
        <%= link_to 'View all post', posts_path, class:"btn btn-primary btn-xs" %>
      </div>
    <% end %>
  </div>
</div>
