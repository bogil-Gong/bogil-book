<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Created by</th>
      <% if @user.id == current_user.id %>
      <th>Action</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @user_posts.each do |user_posts| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= truncate(post.body, length: 10) %></td>
        <td><%= time_ago_in_words(post.created_at) %> ago</td>
        <% if @user.id == current_user.id %>
          <td><%= link_to 'Delete', user_post_path(@user_post), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger btn-xs" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
